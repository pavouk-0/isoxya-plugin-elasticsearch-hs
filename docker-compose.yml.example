# vim: set ft=yaml:
version: "2.4"
services:
  plugin_elasticsearch:
    build: .
    #image: docker.io/tiredpixel/isoxya-plugin-elasticsearch.build:unstable
    init: true
    volumes:
      - ./.stylish-haskell.yaml:/home/x/repo/.stylish-haskell.yaml
      - ./bin:/home/x/repo/bin
      - ./cabal.project.freeze:/home/x/repo/cabal.project.freeze
      - ./isoxya-plugin-elasticsearch.cabal:/home/x/repo/isoxya-plugin-elasticsearch.cabal
      - ./lib:/home/x/repo/lib
      - ./src:/home/x/repo/src
      - ./test:/home/x/repo/test
    networks:
      es: {}
      streamer:
        aliases:
          - isoxya-plugin-elasticsearch.localhost
      test: {}
    restart: on-failure
    depends_on:
      - es
  es:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.17.2
    volumes:
      - es:/usr/share/elasticsearch/data
    networks:
      - es
    restart: on-failure
    environment:
      ES_JAVA_OPTS: -Xms128m -Xmx128m
      discovery.type: single-node
      xpack.security.enabled: 'false'
  kib:
    image: docker.elastic.co/kibana/kibana:7.17.2
    networks:
      - es
    ports:
      - 0.0.0.0:5601:5601
    restart: on-failure
    depends_on:
      - es
    environment:
      ELASTICSEARCH_HOSTS: http://es:9200
      SERVER_HOST: 0.0.0.0
  test_echo:
    image: docker.io/keisato/http-echo:latest
    networks:
      - test
    restart: on-failure
volumes:
  es: {}
networks:
  es: {}
  streamer: {}
  test: {}
